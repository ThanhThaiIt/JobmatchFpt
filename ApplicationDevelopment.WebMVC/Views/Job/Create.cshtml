@using ApplicationDevelopment.WebMVC.Commons
@model ApplicationDevelopment.WebMVC.Models.JobViewModel

@{
    ViewData["Title"] = "Create Job";
    var isCreate = Model == null || Model.Id == Guid.Empty;
    var buttonName = isCreate ? "Create" : "Update";
    var actionName = isCreate ? "Create" : "Edit";
}

<h1 class="fall-title">Create Job</h1>

<button type="button" class="btn fall-button" onclick="openModalCreateJobType();">Create Job Type</button>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@actionName" class="fall-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" class="form-control" />

            <div id="announcement">@ViewData[ViewBags.ANNOUNCEMENT]</div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control fall-input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control fall-input"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Requirements" class="control-label"></label>
                <textarea asp-for="Requirements" class="form-control fall-input"></textarea>
                <span asp-validation-for="Requirements" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="JobTypeId" class="control-label">Job Type</label>
                <select asp-for="JobTypeId" asp-items="ViewBag.JobTypes" class="form-control fall-input"></select>
                <span asp-validation-for="JobTypeId" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align: center;">
                <input type="submit" value="@buttonName" class="btn fall-button" />
            </div>
        </form>
    </div>

    <div class="col-md-8">
        <h3 class="fall-title">Danh sách công việc đã tạo</h3>
        @await Component.InvokeAsync("JobList")
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Khởi tạo khi trang được tải
        });

        function openModalCreateJobType() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("Create", "JobType")',
                success: function (data) {
                    openModal("Job Type", data, modalSizes.large);
                },
                error: function () {
                    console.error("Error opening modal for Job Type.");
                }
            });
        }
    </script>
}

<style>
    body {
        background-color: #FFF4E6;
        color: #4F4F4F;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .fall-title {
        color: #D96C38;
        font-size: 2rem;
        text-align: center;
        margin: 20px 0;
    }

    .fall-form {
        background-color: #FFE8C2;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .fall-input {
        background-color: #F5D2A2;
        border: 1px solid #D96C38;
        color: #4F4F4F;
        border-radius: 5px;
    }

    .fall-button {
        background-color: #D96C38;
        color: white;
        font-size: 1.2rem;
        padding: 10px 20px;
        border-radius: 5px;
        margin-top: 10px;
    }

    .fall-button:hover {
        background-color: #D48F56;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .text-danger {
        color: #E74C3C;
    }

    hr {
        border-top: 2px solid #D96C38;
    }
</style>