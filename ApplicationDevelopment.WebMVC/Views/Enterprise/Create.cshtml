@model ApplicationDevelopment.WebMVC.Models.EnterpriseViewModel

@{
    ViewData["Title"] = "Create";
    bool isCreate = Model == null;
    string buttonName = isCreate ? "Create" : "Update";
    string actionName = isCreate ? "Create" : "Edit";
}

<style>
    body {
        background-color: #f0f8ff; /* Nền xanh nhạt giống màu trời mùa hè */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-group label {
        color: #1e90ff; /* Màu chữ xanh dương */
    }

    .btn-primary {
        background-color: #ff7f50; /* Màu cam tươi sáng cho nút */
        border-color: #ff7f50;
        font-weight: bold;
    }

    .btn-primary:hover {
        background-color: #ff6347; /* Màu cam đậm khi hover */
        border-color: #ff6347;
    }

    .control-label {
        font-size: 1.1rem;
        font-weight: bold;
        color: #ff4500; /* Màu cam cho nhãn */
    }

    .form-control {
        border-radius: 0.5rem;
        border: 1px solid #ff4500; /* Màu cam cho các input */
    }

    .form-group {
        margin-bottom: 15px;
    }

    .row {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .col-md-4 {
        border-right: 2px solid #ff4500;
    }

    h1 {
        color: #ff6347;
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 30px;
    }

    .form-group input[type="radio"] {
        margin-right: 5px;
    }

    .form-group input[type="radio"]:checked + label {
        font-weight: bold;
        color: #ff6347; /* Màu cam cho radio button đã được chọn */
    }

    /* Background image of summer theme */
    .row {
        background-image: url('https://www.example.com/summer-bg.jpg'); /* Thêm hình nền mùa hè */
        background-size: cover;
        background-position: center;
    }
</style>

<h1>Create Enterprise</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@actionName">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" class="form-control" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hotline" class="control-label"></label>
                <input asp-for="Hotline" class="form-control" />
                <span asp-validation-for="Hotline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxNumber" class="control-label"></label>
                <input asp-for="TaxNumber" class="form-control" />
                <span asp-validation-for="TaxNumber" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align: center">
                <input type="submit" value="@buttonName" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        @await Component.InvokeAsync("EnterpriseList")
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}